.pwd-invalid:focus:required {
  color: #b94a48;
  border-color: #ee5f5b;
}

.pwd-invalid:focus:required:focus {
  border-color: #e9322d;
  -webkit-box-shadow: 0 0 6px #f8b9b7;
     -moz-box-shadow: 0 0 6px #f8b9b7;
          box-shadow: 0 0 6px #f8b9b7;
}

#pwderr { display: none; }

.chpass { margin: 0; }
.chpass label { margin-bottom: 0; }
.chpass input[type="email"], .chpass input[type="password"] { width: 95%; }
p.chpass-header { font-weight: bold; }
